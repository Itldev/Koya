<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
  

    <bean id="koya.templates-bootstrap" 
          class="org.alfresco.repo.module.ImporterModuleComponent" 
          parent="module.baseComponent">
   
        <!-- Module Details -->
        <property name="moduleId" value="${project.artifactId}" />
        <property name="name" value="koyaMailsTemplatesBootstrap" />
        <property name="description" value="Koya Mail Templates" />
        <property name="sinceVersion" value="0.5" />
        <property name="appliesFromVersion" value="0.5" />
   
        <!-- Data properties -->
        <property name="importer" ref="spacesBootstrap"/>
        <property name="bootstrapViews">
            <list>
                <props>
                    <prop key="path">/${spaces.company_home.childname}/${spaces.dictionary.childname}/${spaces.templates.email.childname}</prop>
                    <prop key="location">alfresco/module/${project.artifactId}/bootstrap/koya-mail-templates.xml</prop>
                </props>        
            </list>
        </property>

    </bean>
    
    <!--add versionable aspect to defined node-->
    <bean id="patch.koyaMakeNodesVersionable" class="fr.itldev.koya.patch.MakeNodesVersionable"
          parent="basePatch">
        <property name="id">
            <value>patch.koyaMakeNodesVersionable</value>
        </property>       
        <property name="description">
            <value>Make specified nodes versionable</value>
        </property>    
        <property name="fixesFromSchema">
            <value>0</value>
        </property>
        <property name="fixesToSchema">
            <value>${version.schema}</value>
        </property>
        <property name="targetSchema">
            <value>10000</value>
        </property>
        <property name="koyaNodeService" ref="koyaNodeService"/>
        <property name="versionService" ref="versionService"/>
        <property name="xPathNodes">
            <list>
                <value>/${spaces.company_home.childname}/${spaces.dictionary.childname}/${spaces.templates.email.childname}/cm:invite/cm:invite-email_fr.html.ftl</value>                
                <value>/${spaces.company_home.childname}/${spaces.dictionary.childname}/${spaces.templates.email.childname}/app:notify_email_templates/cm:notify_user_email_fr.html.ftl</value>                
            </list>
        </property>
                      
    </bean>
    
    
    <bean id="koya-workflowBootstrap" parent="workflowDeployer">
        <property name="workflowDefinitions">
            <list>
                     
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/${project.artifactId}/workflow/resetPassword.bpmn</prop>
                    <prop key="mimetype">text/xml</prop>
                    <prop key="redeploy">true</prop>
                </props>
            </list>
        </property>
        <property name="models">
            <list>
                <value>alfresco/module/${project.artifactId}/workflow/resetPassword-model.xml</value>            
            </list>
        </property>
    </bean>
    
    
    <bean id="baseKoyaResetPasswordDelegate" parent="baseJavaDelegate"
          class="org.alfresco.repo.invitation.activiti.AbstractInvitationDelegate" abstract="true"/>
    
    <bean id="SendResetTicketDelegate" parent="baseKoyaResetPasswordDelegate"
          class="fr.itldev.koya.resetpassword.activiti.SendResetTicketDelegate" >
        <property name="koyaMailService" ref="koyaMailService"/> 
        <property name="userService" ref="userService"/>
    </bean>
    
    <bean id="ResetPasswordDelegate" parent="baseKoyaResetPasswordDelegate"
          class="fr.itldev.koya.resetpassword.activiti.ResetPasswordDelegate" >
        <property name="userService" ref="userService"/>
        <property name="authenticationService" ref="AuthenticationService"/>        
    </bean>

      
</beans>
