<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>
<beans>
    
    
    <!--
    ==================================================================
    ========================== Sociétés ==============================
    ==================================================================
    -->
    <!--create company-->
    <bean id="webscript.fr.itldev.koya.company.add.get" 
          class="fr.itldev.koya.webscript.company.AddCompany"
          parent="webscript">                
        <property name="companyService" ref="companyService" />
        
    </bean>
    <!--list companies-->
    <bean id="webscript.fr.itldev.koya.company.list.get" 
          class="fr.itldev.koya.webscript.company.ListCompany"
          parent="webscript">                
        <property name="companyService" ref="companyService" />
        
    </bean>
    
    <!--
    ==================================================================
    ========================== Offres Commerciales ==================
    ==================================================================
    -->
    <!--liste des Offres commerciales -->
    <bean id="webscript.fr.itldev.koya.salesoffer.list.get" 
          class="fr.itldev.koya.webscript.salesoffer.ListOffer"
          parent="webscript">                
        <property name="salesOfferService" ref="salesOfferService" />
    </bean>
    <!--
    ==================================================================
    ========================== Espaces ==============================
    ==================================================================
    -->
    
    <!--space creation-->
    <bean id="webscript.fr.itldev.koya.space.add.post" 
          class="fr.itldev.koya.webscript.space.AddSpace"
          parent="webscript">                
        <property name="spaceService" ref="spaceService" /> 
    </bean>
    <!--liste les spaces-->
    <bean id="webscript.fr.itldev.koya.space.list.post" 
          class="fr.itldev.koya.webscript.space.ListSpace"
          parent="webscript">                
        <property name="spaceService" ref="spaceService" />
        
    </bean>
    
    <!--suppression d'un space-->
    <bean id="webscript.fr.itldev.koya.space.del.del" 
          class="fr.itldev.koya.webscript.space.DelSpace"
          parent="webscript">                
        <property name="spaceService" ref="spaceService" />
        
    </bean>
    
    
    <!--
    ==================================================================
    ========================== Dossiers ==============================
    ==================================================================
    -->
    
    <!--création d'un dossier-->
    <bean id="webscript.fr.itldev.koya.dossier.add.post" 
          class="fr.itldev.koya.webscript.dossier.AddDossier"
          parent="webscript">                
        <property name="dossierService" ref="dossierService" />
    </bean>
    <!--liste les dossiers-->
    <bean id="webscript.fr.itldev.koya.dossier.list.post" 
          class="fr.itldev.koya.webscript.dossier.ListDossier"
          parent="webscript">                
        <property name="dossierService" ref="dossierService" />
    </bean>
       
    <!--
    ==================================================================
    ========================== Contenus ============================
    ==================================================================
    -->
 
    <!--content creation-->
    <bean id="webscript.fr.itldev.koya.content.add.post" 
          class="fr.itldev.koya.webscript.content.AddContent"
          parent="webscript">                
        <property name="koyaContentService" ref="koyaContentService" />
    </bean>
    <!--content listing-->
    <bean id="webscript.fr.itldev.koya.content.list.post" 
          class="fr.itldev.koya.webscript.content.ListContent"
          parent="webscript">                
        <property name="koyaContentService" ref="koyaContentService" />    
    </bean>
    
    <!--content move-->
    <bean id="webscript.fr.itldev.koya.content.move.post" 
          class="fr.itldev.koya.webscript.content.MoveContent"
          parent="webscript">                
        <property name="koyaContentService" ref="koyaContentService" />    
    </bean>
 
 
    <!--
    ==================================================================
    ========================== Global ============================
    ==================================================================
    -->
    
    <!--Changement du status d'activité-->
    <bean id="webscript.fr.itldev.koya.global.toggleactive.post" 
          class="fr.itldev.koya.webscript.global.ToggleActive"
          parent="webscript">                
        <property name="koyaNodeService" ref="koyaNodeService" />        
    </bean>
    
    <!--Détermination de la taille disque occupée par tous les éléments d'un conteneur-->
    <bean id="webscript.fr.itldev.koya.global.disksize.post" 
          class="fr.itldev.koya.webscript.global.DiskSize"
          parent="webscript">                
        <property name="koyaNodeService" ref="koyaNodeService" />        
    </bean>
    
    
    
 
</beans>
