    <build>
        <plugins>
            <plugin>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <version>1.8.0</version>
                <configuration>
                    <header>etc/header.txt</header>
                    <strictCheck>true</strictCheck>
                    <properties>
                        <owner>Itl Developpement</owner>
                        <year>2014</year>
                        <email>contact@itldev.fr</email>
                    </properties>

                    <headerDefinitions>
                        <headerDefinition>etc/style.xml</headerDefinition>
                    </headerDefinitions>
                    <mapping>
                        <js>JS_STYLE</js>
                    </mapping>
                    <excludes>
                        <exclude>**/alfresco-global.properties</exclude>
                        <exclude>alf_data_dev/**</exclude>
                        <exclude>**/log4j.properties</exclude>
                        <exclude>**/*-log4j.properties</exclude>
                        <exclude>GNU-AGPL-3.0.txt</exclude>
                        <exclude>README.md</exclude>
                        <exclude>**/*.config.xml</exclude>
                        <exclude>alfresco/**</exclude>
                        <exclude>share/**</exclude>
                        <exclude>runner/**</exclude>
                        <exclude>etc/**</exclude>
                        <exclude>solr/**</exclude>
                        <exclude>**/*.log*</exclude>
                        <exclude>.gitignore</exclude>
                        <exclude>nbactions.xml</exclude>
                        <exclude>**/*.acp</exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>format</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
